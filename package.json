{
  "name": "lone-goose-press",
  "version": "0.1.0",
  "description": "",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/nikolaswise/lone-goose-press.git"
  },
  "author": "",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "babelify": "^5.0.3",
    "browserify": "^9.0.3",
    "calcite-web": "git+ssh://git@github.com/esri/calcite-web.git",
    "fsmonitor": "^0.2.4",
    "glob": "~4.4.1",
    "imagemin": "^3.1.0",
    "imagemin-newer": "^1.0.1",
    "node-sass": "^2.0.0-beta",
    "npm-run-all": "^1.2.6",
    "parallelshell": "^1.0.4",
    "rerun-script": "^0.6.0",
    "rye": "git://github.com/nikolaswise/rye.git",
    "scss-cli": "0.0.4",
    "simplifyify": "^1.3.0",
    "static-site": "^1.0.2",
    "tinystore": "git+ssh://git@github.com:ngoldman/tinystore",
    "viewport-grid": "git://github.com/esripdx/viewport-grid.git"
  },
  "dependencies": {
    "hapi": "~8.2.0",
    "stripe": "~3.3.2",
    "request": "~2.53.0",
    "observable": "~2.1.3",
    "ampersand-events": "~1.0.1",
    "diff-dom": "~1.0.0"
  },
  "browser": {
    "calcite-web": "./node_modules/calcite-web/lib/js/calcite-web.js"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "watches": {
    "html": [
      "source/**/*.html",
      "source/**/*.md"
    ],
    "js": "source/_assets/**/*.js",
    "sass": "source/**/*.scss",
    "img": "source/"
  },
  "scripts": {
    "start": "node server.js",
    "predev": "npm-run-all html sass img js",
    "dev": "parallelshell 'node server.js' 'rerun-script'",
    "fmt": "standard --format",
    "img": "imagemin-newer source/_assets/ www/assets",
    "js": "simplifyify source/_assets/js/index.js --outfile www/assets/js/bundle.js --debug",
    "sass": "node-sass source/_assets/css/style.scss -o www/assets/css --include-path node_modules/",
    "html": "static-site -s source  -b www -h source/_helpers/*.js --template _layouts/layout.html --block content"
  }
}
