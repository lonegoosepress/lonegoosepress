!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, height=device-height')
      block description
      title
        block title
          = locals.name
      - if (env.mode == 'build'){
      -   locals.url = locals.build
      - }
      link(rel='shortcut icon', href=locals.url + '/img/favicon.ico')
      link(rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href=locals.url + '/css/style.css')

  body
    block header
      header.panel.transparent.nav
        nav.constrain
          - if (locals.url == ''){
            a.left(href="/")= locals.name
          - } else {
            a.left(href=locals.url)= locals.name
          - }
          a.right(href=locals.url + '/archive/') Archive
          span.right.hide-mobile /
          - if (locals.url == ''){
            a.right.hide-mobile(href="/") Blog
          - } else {
            a.right.hide-mobile(href=locals.url) Blog
          - }

    block hero

    block content
      div.panel.white

    block latest

    footer.panel.navy
      div.constrain
        block footer
          section
            !=contents['about.md'].html

    block scripts
