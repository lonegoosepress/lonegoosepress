<% wrap_layout :layout do %>
<div class="container">
  <div class="content-area">
    <%= yield %>
  </div>
  <div class="block-grid block-grid-3-up tablet-block-grid-2-up phone-block-grid-1-up">
    <% if current_page.data.title == 'books' %>
      <% @books.each do |publication| %>
        <%= partial 'partials/publication_in_list', locals: {publication: publication} %>
      <% end %>
    <% elsif current_page.data.title == 'broadsides'%>
      <% @broadsides.each do |publication| %>
        <%= partial 'partials/publication_in_list', locals: {publication: publication} %>
      <% end %>
    <% elsif current_page.data.title == 'ephemera'%>
      <% @ephemera.each do |publication| %>
        <%= partial 'partials/publication_in_list', locals: {publication: publication} %>
      <% end %>
    <% elsif current_page.data.title == 'design'%>
      <% @design.each do |publication| %>
        <%= partial 'partials/publication_in_list', locals: {publication: publication} %>
      <% end %>
    <% elsif current_page.data.title == 'production'%>
      <% @bookbinding.each do |publication| %>
        <%= partial 'partials/publication_in_list', locals: {publication: publication} %>
      <% end %>
    <% elsif current_page.data.title == 'trade-publication'%>
      <% @boxmaking.each do |publication| %>
        <%= partial 'partials/publication_in_list', locals: {publication: publication} %>
      <% end %>
    <% else %>
      <p>Sorry, we don't really know what your looking for.</p>
    <% end %>
    </div>
  </div>
</div>
<% end %>

