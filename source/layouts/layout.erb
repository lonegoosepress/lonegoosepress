<head>
  <meta charset="UTF-8">
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  <meta name="viewport" content="width=device-width, user-scalable=no">
  <title><%= data.page.title ? data.page.title + " - lone goose press" : "lone goose press" %></title>
  <% if current_page.data.description %>
  <meta name="description" content="<%= current_page.data.description %>">
  <% end %>
  <link rel="shortcut icon" href="<%= base_url %>favicon.ico">
  <%= stylesheet_link_tag "lonegoose" %>

  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.18/angular.min.js"></script>
<head>
<body class="<%= page_classes %>" ng-app="lgpCommerce" ng-controller="storeController">
  <div class="drawer">
    <%= partial 'partials/drawer' %>
  </div>
  <div class="wrapper">
    <%= partial 'partials/navigation' %>
    <%= yield %>
    <%= partial 'partials/inline_menu' %>
    <%= partial 'partials/footer' %>
  </div>
  <%= javascript_include_tag "peacoat" %>
  <%= javascript_include_tag "app" %>
  <%= javascript_include_tag "services" %>
  <%= javascript_include_tag "controllers" %>
  <%= javascript_include_tag "shoppingCart" %>
  <%= javascript_include_tag "product" %>
</body>
</html>
