<section class="col col-12">
  <% @publications[0..0].each_with_index do |publication| %>
    <h2><%= link_to publication.data.title publication.data.url%></h2>

    <% if publication.data.thumbnail %>
      <figure>
        <% link_to publication.url do %>
          <%= image_tag publication.data.thumbnail %>
        <% end %>
      </figure>
    <% end %>

    <p><%= publication.data.description%></p>
  <% end %>
</section>